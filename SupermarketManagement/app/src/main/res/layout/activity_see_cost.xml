<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_select_goods"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.chen.supermarketmanagement.SelectGoodsActivity"
android:background="@drawable/zengjia"
android:weightSum="5"
android:orientation="vertical">
<Button
    android:text="按时间查看账单"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/seebtn"
    android:background="@color/colorPrimary"
    android:layout_weight="0.25"/>
<TextView
    android:layout_weight="0.25"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="设置查找日期"
    android:textColor="#969494"
    android:textSize="20sp"
    />

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:weightSum="10"
    android:layout_weight="0.5">
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-9-25 周日"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_weight="4"
        android:textStyle="normal|bold|italic" />
    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-9-25 周日"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:layout_weight="4"
        android:textStyle="normal|bold|italic" />


</LinearLayout>

<ListView
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:id="@+id/lvSeeCostBytime"
    android:background="#00000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="总账单"
        android:id="@+id/tvAll"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@android:dimen/app_icon_size" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:id="@+id/lvSeeCost"
        android:background="#00000000" />
</LinearLayout>
