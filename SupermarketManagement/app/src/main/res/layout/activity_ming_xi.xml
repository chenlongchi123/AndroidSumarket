<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_goods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chen.supermarketmanagement.SelectGoodsActivity"
    android:background="@drawable/zengjia"
    android:weightSum="5"
    android:orientation="vertical">


    <TextView
        android:text="出售货物历史"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSellHistory"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:id="@+id/lvSellHistory"
        android:background="#00000000"
        android:layout_weight="1.38" />

    <TextView
        android:text="其他支出历史"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCostHistory"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:id="@+id/lvSeeOther"
        android:background="#00000000"
        android:layout_weight="2.90" />


</LinearLayout>
